{
    "name": "peter279k/fork-calendr",
    "description": "Object Oriented calendar management",
    "keywords": ["date", "calendar", "events"],
    "homepage": "https://github.com/peter279k/fork-CalendR",
    "type": "library",
    "license": "MIT",

    "authors": [
        {
            "name": "Chung-Sheng, Li",
            "email": "peter279k@gmail.com",
            "homepage": "https://peterli.website"
        }
    ],

    "require": {
        "php": "^7.3|^8.0",
        "symfony/options-resolver": "^4.4|^5.0"
    },

    "require-dev": {
        "doctrine/cache":               "^1.5",
        "doctrine/common":              "^2.5",
        "doctrine/orm":                 "^2.5",
        "phpunit/phpunit":              "^9.0",
        "silex/silex":                  "^1.3",
        "symfony/dependency-injection": "^4.4|^5.0",
        "symfony/config":               "^4.4|^5.0",
        "symfony/yaml":                 "^4.4|^5.0",
        "twig/twig":                    "^1.23|^2.0"
    },

    "autoload": {
        "psr-4": { "CalendR\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": { "CalendR\\Test\\": "tests/" }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "2.2.x-dev"
        }
    }
}
